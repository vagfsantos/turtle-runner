{
  "name": "turtlerunner",
  "displayName": "Turtle Runner",
  "version": "1.0.0",
  "description": "A runner game",
  "main": "index.js",
  "scripts": {
    "del-test": "del ./_test",
    "copy-test": "copy ./app ./_test",
    "babel": "cross-env BABEL_ENV=test babel ./_test/**/*.js --overwrite --ignore ./**/*.test.js",
    "babel-test": "watch -f './app/**/*.js' -r 'npm run copy-test && npm run babel'",
    "avajs-test": "watch -f './app/**/*.js' -r 'ava --verbose --color'",
    "start": "webpack-dev-server",
    "test": "webpack --config 'webpack.test.js' --dev"
  },
  "author": "Vagner F Santos",
  "license": "Apache-2.0",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "cordova-browser": "^5.0.3",
    "cordova-plugin-whitelist": "^1.3.3"
  },
  "cordova": {
    "plugins": {
      "cordova-plugin-whitelist": {}
    },
    "platforms": [
      "browser"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.51",
    "@babel/core": "^7.0.0-beta.51",
    "@babel/plugin-transform-modules-commonjs": "^7.0.0-beta.51",
    "@babel/preset-env": "^7.0.0-beta.51",
    "ava": "1.0.0-beta.6",
    "babel-loader": "^8.0.0-beta.4",
    "cli-watch": "^1.0.6",
    "copy-dir-cli": "0.0.3",
    "cross-env": "^5.2.0",
    "del-cli": "^1.1.0",
    "eslint": "^5.0.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-import": "^2.13.0",
    "install": "^0.12.1",
    "npm": "^6.1.0",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4"
  }
}
